        <Button Focusable="False" x:Name="button4_Copy" HorizontalAlignment="Left" Margin="33,48.796,0,0" Style="{DynamicResource RadioButtonUp}" Width="437.157" Grid.Row="3" Foreground="LightGray" BorderBrush="#FF36628C" BorderThickness="0" FontSize="16" FontFamily="微软雅黑" FontWeight="Bold" Height="237.177" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Button Focusable="False" x:Name="button5_Copy" HorizontalAlignment="Left" Margin="-87,32.5,0,0" Style="{DynamicResource RadioButtonLeft}" Width="401.157" Grid.Row="4" Foreground="LightGray" BorderBrush="#FF36628C" BorderThickness="0" FontSize="16" FontFamily="微软雅黑" FontWeight="Bold" Height="363.639" VerticalAlignment="Top"/>
        <Button Focusable="False" x:Name="button5_Copy2" HorizontalAlignment="Left" Margin="67.343,234.834,0,0" Style="{DynamicResource RadioButtonDown}" Width="369.657" Grid.Row="4" Foreground="LightGray" BorderBrush="#FF36628C" BorderThickness="0" FontSize="16" FontFamily="微软雅黑" FontWeight="Bold" Height="237.166" VerticalAlignment="Top"/>
        <Button Focusable="False" x:Name="button5_Copy1" HorizontalAlignment="Left" Margin="190.843,32.5,0,0" Style="{DynamicResource RadioButtonRight}" Width="401.157" Grid.Row="4" Foreground="LightGray" BorderBrush="#FF36628C" BorderThickness="0" FontSize="16" FontFamily="微软雅黑" FontWeight="Bold" Height="363.639" VerticalAlignment="Top"/>

    </Grid>
</Window>
